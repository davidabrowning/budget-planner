<Window x:Class="BudgetPlanner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Budget Planner" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <ListView ItemsSource="{Binding Path=Transactions}" DisplayMemberPath="Amount"></ListView>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBox x:Name="AmountInput" Text="" />
                    <Button x:Name="AddTransactionButton"
                            Content="Add transaction"
                            Click="AddTransactionButton_Click" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
