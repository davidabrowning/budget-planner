<Window x:Class="BudgetPlanner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Budget Planner" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <ListView ItemsSource="{Binding Path=Transactions}" 
                              SelectedItem="{Binding Path=SelectedTransaction, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Year}" Margin="5" />
                                    <TextBlock Text="{Binding Path=Month}" Margin="5" />
                                    <TextBlock Text="{Binding Path=Category}" Margin="5" />
                                    <TextBlock Text="{Binding Path=Amount}" Margin="5" />
                                    <TextBlock Text="{Binding Path=Frequency}" Margin="5" />
                                    <TextBlock Text="{Binding Path=Comment}" Margin="5" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TabControl>
                        <TabItem Header="Add new">
                            <StackPanel>
                                <Label Content="Amount:" />
                                <TextBox x:Name="NewAmount" Text="" />

                                <Label Content="Year:" />
                                <TextBox x:Name="NewYear" Text="" />

                                <Label Content="Month:" />
                                <ListBox x:Name="NewMonth" ItemsSource="{Binding Path=Months}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>

                                <Label Content="Category:"/>
                                <ListBox x:Name="NewCategory" 
                                         ItemsSource="{Binding Path=Categories}" />

                                <Label Content="Frequency:" />
                                <ListBox x:Name="NewFrequency" 
                                         ItemsSource="{Binding Path=Frequencies}"  />

                                <Label Content="Comment:" />
                                <TextBox x:Name="NewComment" Text="" />

                                <Button x:Name="AddTransactionButton"
                                        Content="Add transaction"
                                        Click="AddTransactionButton_Click" />
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Edit">
                            <StackPanel>
                                <TextBox x:Name="EditAmount" 
                                        Text="{Binding Path=SelectedTransaction.Amount}" />
                                <TextBox x:Name="EditComment" 
                                        Text="{Binding Path=SelectedTransaction.Comment}" />
                                <TextBox x:Name="EditYear" 
                                        Text="{Binding Path=SelectedTransaction.Year}" />
                                <ListBox x:Name="EditMonth"
                                        ItemsSource="{Binding Path=Months}" 
                                        SelectedItem="{Binding Path=SelectedTransaction.Month, Mode=TwoWay}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                                <ListBox x:Name="EditCategory" 
                                         ItemsSource="{Binding Path=Categories}" 
                                         SelectedItem="{Binding Path=SelectedTransaction.Category, Mode=TwoWay}" />
                                <ListBox x:Name="EditFrequency" 
                                         ItemsSource="{Binding Path=Frequencies}" 
                                         SelectedItem="{Binding Path=SelectedTransaction.Frequency, Mode=TwoWay}" />

                                <Button x:Name="DeleteTransactionButton"
                                        Content="Delete transaction"
                                        Click="DeleteTransactionButton_Click" />
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
